{{>header}}
<div class="row form-layout p-5">
    <div class="col-md-12">
        <div class="recepieInfo">
            <div class="detailsFoodImage">
                <img src="{{recepies.foodImageURL}}"
                    alt="">
            </div>

            <div class="infoPack">
                <h3 class="my-3">{{recepies.meal}}</h3>
                <p class="prep-method">{{recepies.prepMethod}}</p>
                <p class="description">{{recepies.description}}</p>
            </div>
            <div class="actions">
                {{#if organizerCheck}}
                <a class="btn btn-danger" href="#/delete/{{recepies._id}}">Archive</a>
                <a class="btn btn-info" href="#/edit/{{recepies._id}}">Edit</a>
                {{/if}}
                <a class="btn btn-success" href="#/like/{{recepies._id}}"> {{recepies.likes}}</a>
            </div>
        </div>

        <div class="detailsIngredients">
            <h3 class="my-3 ingredient">Ingredients</h3>
            <ul>
                {{#each recepies.ingredients}}
                <li>{{ingrediant}}</li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>
{{>footer}}