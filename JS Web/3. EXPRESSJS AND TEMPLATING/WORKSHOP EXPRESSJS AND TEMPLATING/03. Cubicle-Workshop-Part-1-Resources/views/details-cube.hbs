{{>header}}
<div class="container">
  <main>
    <h1>{{name}}</h1>
    <img class="cube" src="{{cube.imageUrl}}">
    <div class="details">
      <p><span>Description:</span> {{cube.description}}</p>
      <p><span>Difficulty level:</span> {{cube.difficultyLevel}}</p>
      <a class="btn" href="/">Back</a>
      <a class="btn deleteBtn" href="/delete/{{cube._id}}">Delete</a>
      <a class="btn editBtn" href="/Edit/{{cube._id}}">Edit</a>
    </div>
    <h2>Accessories</h2>
    <div class="accessories">
      {{#if cube.accessories}}
      {{#each cube.accessories}}
      <div class="accessory">
        <img src="{{imageUrl}}" alt="stickerName">
        <h3>{{cube.accessories.name}}</h3>
        <p>{{description}}</p>
        <a class="btn editBtn" href="/delete/{{cube._id}}">Remove</a>
      </div>
      {{/each}}
      {{else}}
      <h3 class="italic">This cube has no accessories yet...</h3>
      {{/if}}
    </div>
  </main>
</div>
{{>footer}}